echo 'Presubmit for built_value.' \
    && cd built_value \
    && pub get \
    && pub run test \
    && echo 'Presubmit for built_value_generator.' \
    && cd ../built_value_generator \
    && pub get \
    && pub upgrade \
    && dart tool/build.dart \
    && pub run test \
    && echo 'Presubmit for built_value_test.' \
    && cd ../built_value_test \
    && pub get \
    && pub upgrade \
    && dart tool/build.dart \
    && pub run test \
    && echo 'Presubmit for end_to_end_test.' \
    && cd ../end_to_end_test \
    && pub get \
    && pub upgrade \
    && dart tool/build.dart \
    && pub run test \
    && echo 'Presubmit for benchmark.' \
    && cd ../benchmark \
    && pub get \
    && pub upgrade \
    && dart tool/build.dart \
    && pub run test \
    && echo 'Presubmit for example.' \
    && cd ../example \
    && pub get \
    && pub upgrade \
    && dart tool/build.dart \
    && pub run test \
    && echo 'Presubmit for chat_example.' \
    && cd ../chat_example \
    && pub get \
    && pub upgrade \
    && dart tool/build.dart \
    && pub run test
